<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/black_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_current_amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:text="@string/current_amount_title"
            android:textColor="@color/white_signal"
            android:textStyle="bold"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_current_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$1.400.234"
            android:textColor="@color/white_signal"
            android:padding="@dimen/dimen_6dp"
            android:layout_marginTop="@dimen/dimen_1dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            android:textStyle="bold"
            android:textSize="@dimen/dimen_26dp"
            app:layout_constraintTop_toBottomOf="@id/tv_current_amount_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>